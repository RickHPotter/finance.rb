<div data-controller="autocomplete-select">
  <%= hidden_field_tag field, nil, data: { autocomplete_select_target: "input" } %>

  <!-- FIXME: autocompleteSelect is not working as intended due to always bringing the label as param instead of the id -->
  <div class="relative h-11 w-full min-w-[200px]">
    <%= render TextFieldComponent.new(form:, field:, options:, wrapper: false) %>

    <button data-action="autocomplete-select#toggle" type="button" tabindex="-1"
            class="absolute inset-y-0 right-0 flex flex-row-reverse items-center rounded-r-md px-2 focus:outline-none">
      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"> <path fill-rule="evenodd" d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L10 5.414 7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3zm-3.707 9.293a1 1 0 011.414 0L10 14.586l2.293-2.293a1 1 0 011.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" /> </svg>
    </button>

    <ul data-autocomplete-select-target="list"
        id="options" role="listbox"
        class="hidden bg-white absolute z-50 mt-1 max-h-56 w-full overflow-auto rounded-md py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm">
      <% items.each do |item| %>
        <li data-autocomplete-select-target="item" data-action="click->autocomplete-select#choose" data-id="<%= item.id %>"
            id="option-0" role="option" tabindex="-1"
                                        class="group relative cursor-default select-none py-2 pl-3 pr-9 text-gray-900 hover:text-white hover:bg-slate-900" >

          <div data-js="label" class="flex items-center">
            <span data-js="title" class="ml-3 truncate"><%= item.label %></span>
          </div>
          <span data-js="check" class="hidden absolute inset-y-0 right-0 items-center pr-4 text-slate-900 group-hover:text-white">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"> <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /> </svg>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
