<% if @budget.destroyed? %>
  <%= turbo_stream.replace(:center_container, template: "budgets/index") %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { notice: notification_model(:destroyed, Budget) }) %>
  <%= turbo_stream.update(:tabs, partial: "shared/tabs") %>
<% else %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { alert: notification_model(:not_destroyed_because_has_transactions, Budget) }) %>
<% end %>
