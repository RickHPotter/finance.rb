<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <div class="flex space-x-12">
    <div class="flex w-1/4 flex-col my-6">
      <%= render Components::TextFieldComponent.new(form, :entity_id, @entities, type: :select) %>
    </div>

    <%= content_tag :span, form.object&.entity&.entity_name, class: "entities_entity_name", data: { dynamic_description_target: :entity } %>

    <%= form.hidden_field :_destroy %>

    <div class="flex w-1/4 flex-col my-6">
      <%= render Components::ButtonComponent.new(options: { label: action_model(:destroy, BudgetEntity), colour: :red, data: { action: "nested-form#remove dynamic-description#updateDescription" } }) %>
    </div>
  </div>
</div>
