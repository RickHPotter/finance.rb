<% if @budget %>
  <%= turbo_stream.replace(:center_container, template: "cash_transactions/index") %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { notice: notification_model(:updated, Budget) }) %>
  <%= turbo_stream.update(:tabs, partial: "shared/tabs") %>
<% else %>
  <%= turbo_stream.replace(:center_container, template: "budgets/edit", locals: { budget: @budget }) %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { alert: notification_model(:not_updated, Budget) }) %>
<% end %>
