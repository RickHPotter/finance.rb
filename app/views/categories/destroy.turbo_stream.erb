<% if @category.destroyed? %>
  <%= turbo_stream.replace(:center_container, template: "categories/index") %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { notice: notification_model(:destroyed, Category) }) %>
<% else %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { alert: notification_model(:not_destroyed_because_has_transactions, Category) }) %>
<% end %>
