<% if @category.destroyed? %>
  <%= turbo_stream.replace(:center_container, template: "categories/index") %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { notice: "Category has been deleted." }) %>
<% else %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { alert: "Category with transactions cannot be deleted." }) %>
<% end %>
