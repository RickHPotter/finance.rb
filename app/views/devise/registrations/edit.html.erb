<%= form_for resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false, controller: :form }, html: { method: :put } do |f| %>
  <%= render "devise/shared/error_messages", resource: %>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :email, type: :email, svg: :email, autofocus: true, placeholder: attribute_model(resource, :email)) %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <%= content_tag :div, t(:waiting_confirmation, email: resource.unconfirmed_email) %>
  <% end %>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password, type: :password, svg: :key, placeholder: attribute_model(resource, :new_password)) %>
  </div>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password_confirmation, type: :password, svg: :key, placeholder: attribute_model(resource, :new_password_confirmation)) %>
  </div>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password, type: :password, svg: :key, placeholder: attribute_model(resource, :password)) %>
  </div>

  <div>
    <%= render Components::ButtonComponent.new(form: f, options: { label: t("actions.update") }) %>
  </div>
<% end %>
