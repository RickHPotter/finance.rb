<% content_for(:auth_header) do %>
  <%= content_tag :h2, t(:create_your_account), class: "mt-2 text-center text-lg md:text-5xl font-bold tracking-tight text-white" %>
  <p class="mt-1 text-center text-white">
    <%= t(:already_have_an_account) %>
    <%= link_to t(:sign_in), new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
<% end %>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), class: "text-lg", data: { turbo: false, controller: "form-validate" } do |f| %>

  <%= render "devise/shared/error_messages", resource: %>

  <div class="mb-4 text-blue-700">
    <%= render Components::TextField.new(f, :first_name, svg: :user, placeholder: model_attribute(resource, :first_name), autofocus: true) %>
  </div>

  <div class="mb-4 text-blue-700">
    <%= render Components::TextField.new(f, :last_name, svg: :user_group, placeholder: model_attribute(resource, :last_name)) %>
  </div>

  <div class="mb-4 text-blue-700">
    <%= render Components::TextField.new(f, :email, type: :email, svg: :email, placeholder: model_attribute(resource, :email)) %>
  </div>

  <div class="mb-4 text-blue-700">
    <%= render Components::TextField.new(f, :password, type: :password, svg: :key, placeholder: model_attribute(resource, :password)) %>
  </div>

  <div class="mb-4 text-blue-700">
    <%= render Components::TextField.new(f, :password_confirmation, type: :password, svg: :key, placeholder: model_attribute(resource, :password_confirmation)) %>

    <% if @minimum_password_length %>
      <%= content_tag :span, t(:minimum_characters, count: @minimum_password_length), class: "text-xs font-graduate text-gray-500" %>
    <% end %>
  </div>

  <div class="flex justify-center">
    <%= render RubyUI::Button.new(type: :submit, size: :lg, variant: :purple) { t(:sign_up) } %>
  </div>
<% end %>
