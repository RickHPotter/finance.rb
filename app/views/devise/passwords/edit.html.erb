<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password, type: :password, svg: :key, placeholder: model_attribute(resource, :new_password)) %>
  </div>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password_confirmation, type: :password, svg: :key, placeholder: model_attribute(resource, :new_password_confirmation)) %>
  </div>

  <div>
    <%= render Components::ButtonComponent.new(form: f, options: { label: t("actions.update") }) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
