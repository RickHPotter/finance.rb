<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password, type: :password, svg: :key, placeholder: "New Password (leave blank if you don't want to change it)") %>
  </div>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextFieldComponent.new(f, :password_confirmation, type: :password, svg: :key, placeholder: "New Password Confirmation") %>
  </div>

  <div>
    <%= render Components::ButtonComponent.new(form: f, options: { label: "Change my password" }) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
