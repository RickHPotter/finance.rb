<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: %>

  <div class="mb-6 text-blue-700">
    <%= render Components::TextField.new(f, :email, type: :email, svg: :email, autofocus: true, placeholder: model_attribute(resource, :email)) %>
  </div>

  <div class="flex justify-center">
    <%= render RubyUI::Button.new(type: :submit, size: :lg, variant: :purple) { t(:request_password_instructions) } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
