<% if @card_transaction %>
  <% if @entity.active? %>
    <%= turbo_stream.replace(:center_container, template: "card_transactions/new", locals: { card_transaction: @card_transaction }) %>
    <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { notice: "Entity has been updated." }) %>
    <%= turbo_stream.update(:tabs, partial: "shared/tabs") %>
  <% else %>
    <%= turbo_stream.replace(:center_container, template: "entities/index") %>
  <% end %>
<% else %>
  <%= turbo_stream.replace(:center_container, template: "entities/edit", locals: { entity: @entity }) %>
  <%= turbo_stream.update(:notification, partial: "shared/flash", locals: { alert: "Something is wrong." }) %>
<% end %>
