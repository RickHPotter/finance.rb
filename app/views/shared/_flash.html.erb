<% if notice || alert %>
  <div class="relative max-w-5xl mx-auto px-4">
    <div data-controller="notification" class="transition transform duration-1500 fixed inset-0 flex items-end justify-center px-4 py-6 pointer-events-none sm:p-6 sm:pt-16 sm:items-start sm:justify-end z-50" data-transition-enter-from="opacity-0 translate-x-6" data-transition-enter-to="opacity-100 translate-x-0" data-transition-leave-from="opacity-100 translate-x-0" data-transition-leave-to="opacity-0 translate-x-6">
      <div class="max-w-sm w-full bg-white pointer-events-auto rounded-lg shadow-xs overflow-hidden p-4">
        <div class="flex items-start">
          <% if notice %>
            <%= render_icon :check %>
          <% else %>
            <%= render_icon :destroy %>
          <% end %>

          <div class="ml-3 w-0 flex-1 pt-0.5">
            <%= content_tag :p, notice ? t("notification.notice") : t("notification.alert"), class: "text-sm font-medium text-gray-900" %>
            <%= content_tag :p, notice || alert, id: "notification-content", class: "mt-1 text-sm text-gray-500" %>
          </div>

          <div class="ml-4 flex-shrink-0 flex">
            <button id="notification-close" data-action="notification#hide" class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-hidden focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
              <% content_tag :span, t("navigation.close"), class: "sr-only" %>
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
