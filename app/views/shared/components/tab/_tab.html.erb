<li class="z-30 flex-auto text-center w-1/<%= width %>">
  <%= link_to item.link, role: 'tab', aria: { selected: 'false' },
              class: 'text-slate-700 z-30 mb-0 flex w-full cursor-pointer items-center justify-center
                     rounded-lg border-0 bg-inherit px-0 py-1 transition-all ease-in-out',
              data: { 'turbo-frame': item.turbo_frame, 'tab-target': '' } do %>
    <%= render item.icon %>
    <span class="ml-1 font-bold text-slate-700"><%= item.label %></span>
  <% end %>
</li>
