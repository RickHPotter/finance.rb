<%= turbo_frame_tag dom_id user_card do %>
  <tr class="<%= Category::BG_COLOURS.to_a.sample[1] || "bg-black" %> border-b hover:bg-white border-gray-200 font-semibold text-md text-black">
    <th class="px-6 py-4 whitespace-nowrap border-x text-center" >
      <%= user_card.card.card_name %>
    </th>
    <th class="px-6 py-4 whitespace-nowrap border-x text-center" >
      <span class="inline-flex items-center px-1 rounded-xs bg-white text-blue-700">
        <%= link_to user_card.user_card_name, card_transactions_path(user_card_id: user_card.id, format: :turbo_stream), data: { turbo_frame: :center_container, turbo_prefetch: false } %>
      </span>
    </th>
    <th class="px-6 py-4 whitespace-nowrap border-x text-center" >
      <%= l user_card.current_closing_date, format: :long %>
    </td>
    <th class="px-6 py-4 whitespace-nowrap border-x text-center" >
      <%= l user_card.current_due_date, format: :long %>
    </td>
    <th class="px-6 py-4 whitespace-nowrap border-x text-right font-mono" >
      <%= from_cent_based_to_float(user_card.min_spend, "R$") %>
    </td>
    <th class="px-6 py-4 whitespace-nowrap border-x text-right font-mono" >
      <%= from_cent_based_to_float(user_card.credit_limit, "R$") %>
    </td>
    <th class="px-6 py-4 whitespace-nowrap" >
      <div class="flex items-center justify-between px-2 my-1 rounded-md bg-white">
        <%= link_to edit_user_card_path(user_card), class: "text-blue-600", data: { turbo_frame: :center_container } do %>
          <%= render "shared/svgs/cog" %>
        <% end %>

        <%= link_to user_card, class: "text-red-600", data: { turbo_method: :delete } do %>
          <%= render "shared/svgs/destroy" %>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
