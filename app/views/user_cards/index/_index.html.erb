<div class="flex justify-between mb-8">
  <%= link_to "New User Card",
              new_user_card_path,
              class: "py-2 px-3 rounded-xs border border-sky-600 bg-sky-500 text-white shadow-md font-thin",
              data: { turbo_frame: :center_container } %>

  <% include_inactive = params[:include_inactive] == "false" %>
  <%= link_to include_inactive ? "Show Inactive User Cards" : "Hide Inactive User Cards",
              user_cards_path(include_inactive:),
              class: "py-2 px-3 rounded-xs border border-sky-600 bg-sky-500 text-white shadow-md font-thin",
              data: { turbo_frame: :center_container } %>
</div>

<div class="min-w-full pt-2">
  <%= turbo_frame_tag :user_cards do %>
    <div class="mb-8" data-datatable-target="table">
      <div class="bg-slate-300 rounded-lg border-1 border-slate-300 shadow-sm overflow-hidden">
        <div class="grid grid-cols-9 py-1 border-b border-slate-400 rounded-t-lg font-semibold text-black font-graduate">
          <div class="col-span-2"></div>
          <div class="text-center col-span-2 text-slate-600">TRANSACTIONS</div>
          <div class="col-span-5"></div>
        </div>

        <div class="grid grid-cols-9 py-1 border-b border-slate-400 rounded-t-lg font-semibold text-black font-graduate">
          <div></div>
          <div class="text-center">NAME</div>
          <div class="text-center">COUNT</div>
          <div class="text-center">SPENT</div>
          <div class="text-end">CLOSING DATE</div>
          <div class="text-end">DUE DATE</div>
          <div class="text-end">MIN SPEND</div>
          <div class="text-end">CREDIT LIMIT</div>
          <div class="text-center">ACTIONS</div>
        </div>

        <%= render @user_cards %>
      </div>
    </div>
  <% end %>
</div>
